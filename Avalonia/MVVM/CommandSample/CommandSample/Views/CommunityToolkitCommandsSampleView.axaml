<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CommandSample.Views.CommunityToolkitCommandsSampleView"

             xmlns:viewModels="clr-namespace:CommandSample.ViewModels"
             x:DataType="viewModels:CommunityToolkitCommandsViewModel"
             Width="800" Height="450">

    <Design.DataContext>
        <viewModels:CommunityToolkitCommandsViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto, Auto, *" ColumnDefinitions="Auto, *" ShowGridLines="True">

        <TextBlock Grid.Row="0" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center" Margin="5">Command:</TextBlock>

        <StackPanel Grid.Row="0" Grid.Column="1" Spacing="5" Margin="5">

            <Button Command="{Binding OpenThePodBayDoorDirectCommand}">Open the pod bay doors, HAL.</Button>

            <StackPanel Orientation="Horizontal" Spacing="5">
                <TextBox Text="{Binding RobotName}" Watermark="Robot Name" />
                <Button Command="{Binding OpenThePodBayDoorByRobotCommand}"
                        Content="{Binding RobotName, StringFormat='Open the Pod Bay for {0}'}"
                        CommandParameter="{Binding RobotName}" />
            </StackPanel>

            <Button Command="{Binding OpenThePodBayDoorCommand}">Start Pod Bay Opening Sequence</Button>

        </StackPanel>

        <Separator Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Margin="5" Height="2"
                   Background="LightGray" />

        <TextBlock Grid.Row="2" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center" Margin="5">HAL 9000.</TextBlock>

        <Border Grid.Row="2" Grid.Column="1" CornerRadius="5" Margin="5" BorderThickness="1"
                BorderBrush="{DynamicResource SystemAccentColor}">

            <Grid ColumnDefinitions="*, Auto">
                <ItemsControl Grid.Column="0" Margin="5" ItemsSource="{Binding ConversationLog}" />
                <Button Grid.Column="1" Command="{Binding ConversationLog.Clear }" VerticalAlignment="Stretch"
                        VerticalContentAlignment="Center" Background="Transparent" Content="âŒ" />
            </Grid>

        </Border>

    </Grid>

</UserControl>