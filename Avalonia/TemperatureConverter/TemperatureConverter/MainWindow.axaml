<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
        x:Class="TemperatureConverter.MainWindow"
        Title="TemperatureConverter"
        Width="400" Height="450">

    <Window.Styles>
        <Style Selector="Button.CalculateBtn">
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="Width" Value="100" />
        </Style>

        <Style Selector="Border.TitleBorder">
            <Setter Property="Margin" Value="5" />
            <Setter Property="CornerRadius" Value="5" />
            <Setter Property="Background" Value="LightBlue" />
        </Style>

        <Style Selector="TextBlock.Title">
            <Setter Property="Margin" Value="5" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="24" />
        </Style>
        <Style Selector="Grid.MainGrid">
            <!-- <Setter Property="ShowGridLines" Value="True" /> -->
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style Selector="TextBlock.TempUnits">
            <Setter Property="Margin" Value="10" />
        </Style>
        <Style Selector="TextBox.TempValues">
            <Setter Property="Margin" Value="0 5" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="Width" Value="100" />
        </Style>
    </Window.Styles>

    <StackPanel Orientation="Vertical">
        <Border Classes="TitleBorder">
            <TextBlock Classes="Title">Temperature Converter</TextBlock>
        </Border>
        <Grid Classes="MainGrid" ColumnDefinitions="120,100" RowDefinitions="Auto, Auto,Auto">
            <TextBlock Classes="TempUnits" Grid.Row="0" Grid.Column="0">Celsius</TextBlock>
            <TextBox Classes="TempValues" Grid.Row="0" Grid.Column="1" Name="Celsius" KeyDown="Celsius_OnKeyDown">0</TextBox>
            <TextBlock Classes="TempUnits" Grid.Row="1" Grid.Column="0">Fahrenheit</TextBlock>
            <TextBox Classes="TempValues" Grid.Row="1" Grid.Column="1" Name="Fahrenheit" IsReadOnly="True">0</TextBox>
            <Button Classes="CalculateBtn" Grid.Row="2" Grid.Column="1" Click="Button_OnClick">Calculate</Button>
        </Grid>

    </StackPanel>
</Window>