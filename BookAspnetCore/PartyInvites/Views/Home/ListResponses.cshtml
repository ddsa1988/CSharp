@model IEnumerable<GuestResponse>
@{ Layout = null; }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>List Responses</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css"/>
</head>
<body>
    <div class="text-center p-2">
        <h2>Here is the list of people attending the party</h2>

        <table class="table table-bordered table-striped table-sm">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any()) {
                    @foreach (GuestResponse guestResponse in Model) {
                        <tr>
                            <td>@guestResponse.Name</td>
                            <td>@guestResponse.Email</td>
                            <td>@guestResponse.Phone</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</body>
</html>