<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
        x:Class="TwoDecks.MainWindow"
        Title="TwoDecks">

    <Grid ShowGridLines="True" ColumnDefinitions="*,*" RowDefinitions="Auto,*,Auto,Auto">

        <Label Grid.Row="0" Grid.Column="0" Content="Deck _1" />
        <Label Grid.Row="0" Grid.Column="1" Content="Deck _2" />

        <ListBox Name="LeftDeckListBox" Grid.Row="1" Grid.Column="0" />
        <ListBox Name="RightDeckListBox" Grid.Row="1" Grid.Column="1" />

        <Button Name="ShuffleLeftDeck" Grid.Row="2" Grid.Column="0" Content="_Shuffle" />
        <Button Name="ResetLeftDeck" Grid.Row="3" Grid.Column="0" Content="_Reset" />
        <Button Name="ClearRightDeck" Grid.Row="2" Grid.Column="1" Content="_Clear" />
        <Button Name="SortRightDeck" Grid.Row="3" Grid.Column="1" Content="Sor_t" />

    </Grid>

</Window>