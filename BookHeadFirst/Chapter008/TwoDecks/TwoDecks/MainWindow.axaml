<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
        x:Class="TwoDecks.MainWindow"
        Title="TwoDecks">

    <Window.Styles>
        <Style Selector="Label">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="16" />
        </Style>
        <Style Selector="ListBox">
            <Setter Property="Margin" Value="10 5"></Setter>
            <Setter Property="FontSize" Value="16" />
        </Style>
        <Style Selector="Button">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="Margin" Value="10 5" />
            <Setter Property="FontSize" Value="16"></Setter>
        </Style>
    </Window.Styles>

    <Grid ShowGridLines="True" RowDefinitions="Auto,*,Auto,Auto" ColumnDefinitions="*,*">

        <Label Grid.Row="0" Grid.Column="0" Content="Deck 1" />
        <ListBox Name="LeftDeckListBox" Grid.Row="1" Grid.Column="0" SelectionChanged="LeftDeckListBoxSelectionChanged" />
        <Button Name="LeftDeckShuffle" Grid.Row="2" Grid.Column="0" Content="Shuffle" Click="LeftDeckClickShuffle" />
        <Button Name="LeftDeckReset" Grid.Row="3" Grid.Column="0" Content="Reset" Click="LeftDeckClickReset" />

        <Label Grid.Row="0" Grid.Column="1" Content="Deck 2" />
        <ListBox Name="RightDeckListBox" Grid.Row="1" Grid.Column="1" />
        <Button Name="RightDeckClear" Grid.Row="2" Grid.Column="1" Content="Clear" Click="RightDeckClickClear" />
        <Button Name="RightDeckSort" Grid.Row="3" Grid.Column="1" Content="Sort" Click="RightDeckClickSort" />

    </Grid>

</Window>