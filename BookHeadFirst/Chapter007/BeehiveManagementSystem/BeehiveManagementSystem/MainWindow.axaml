<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="625" d:DesignHeight="325"
        x:Class="BeehiveManagementSystem.MainWindow"
        Title="BeehiveManagementSystem">

    <Grid ShowGridLines="False" RowDefinitions="1*,4*,3*" ColumnDefinitions="*,*">

        <Label Grid.Row="0" Grid.Column="0" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center">Job Assignments</Label>

        <StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center">
            <ComboBox Name="JobSelector" HorizontalContentAlignment="Center" FontSize="18" SelectedIndex="0"
                      Width="250" Margin="0,35,0,0">
                <ListBoxItem>Nectar Collector</ListBoxItem>
                <ListBoxItem>Honey Manufacturer</ListBoxItem>
                <ListBoxItem>EggCare</ListBoxItem>
            </ComboBox>
            <Button HorizontalContentAlignment="Center" FontSize="18" Width="250" Margin="0,20,0,0"
                    Click="AssignJob_OnClick">
                Assign this job to a bee
            </Button>
        </StackPanel>

        <Button Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center"
                FontSize="18" Width="250" Click="WorkNextShift_OnClick">
            Work Next Shift
        </Button>

        <Label Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18">Queen's Report</Label>

        <TextBox Name="StatusReport" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Margin="10" IsReadOnly="True"></TextBox>

    </Grid>

</Window>