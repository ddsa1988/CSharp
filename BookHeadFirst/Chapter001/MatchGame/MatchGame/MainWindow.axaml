<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
        x:Class="MatchGame.MainWindow"
        Title="Find all of the matching emojis">

    <Window.Styles>
        <Style Selector="TextBlock">
            <Setter Property="FontSize" Value="36" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </Window.Styles>

    <StackPanel>
        <Grid Name="MainGrid" RowDefinitions="90,90,90,90" ColumnDefinitions="*,*,*,*">
            <TextBlock Grid.Row="0" Grid.Column="0" PointerPressed="TextBlockPressed">?</TextBlock>
            <TextBlock Grid.Row="0" Grid.Column="1" PointerPressed="TextBlockPressed">?</TextBlock>
            <TextBlock Grid.Row="0" Grid.Column="2" PointerPressed="TextBlockPressed">?</TextBlock>
            <TextBlock Grid.Row="0" Grid.Column="3" PointerPressed="TextBlockPressed">?</TextBlock>

            <TextBlock Grid.Row="1" Grid.Column="0" PointerPressed="TextBlockPressed">?</TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="1" PointerPressed="TextBlockPressed">?</TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="2" PointerPressed="TextBlockPressed">?</TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="3" PointerPressed="TextBlockPressed">?</TextBlock>

            <TextBlock Grid.Row="2" Grid.Column="0" PointerPressed="TextBlockPressed">?</TextBlock>
            <TextBlock Grid.Row="2" Grid.Column="1" PointerPressed="TextBlockPressed">?</TextBlock>
            <TextBlock Grid.Row="2" Grid.Column="2" PointerPressed="TextBlockPressed">?</TextBlock>
            <TextBlock Grid.Row="2" Grid.Column="3" PointerPressed="TextBlockPressed">?</TextBlock>

            <TextBlock Grid.Row="3" Grid.Column="0" PointerPressed="TextBlockPressed">?</TextBlock>
            <TextBlock Grid.Row="3" Grid.Column="1" PointerPressed="TextBlockPressed">?</TextBlock>
            <TextBlock Grid.Row="3" Grid.Column="2" PointerPressed="TextBlockPressed">?</TextBlock>
            <TextBlock Grid.Row="3" Grid.Column="3" PointerPressed="TextBlockPressed">?</TextBlock>
        </Grid>
        <Grid Name="FooterGrid" RowDefinitions="*" ColumnDefinitions="*">
            <TextBlock Name="TimeTextBlock" PointerPressed="TimeTextBlockPressed">Elapsed time</TextBlock>
        </Grid>
    </StackPanel>

</Window>