@page "/"
@rendermode InteractiveServer
@using MatchGameBlazor.Models

<PageTitle>Home</PageTitle>

<link rel="stylesheet" href="style.css"/>

<div class="container">
    <div class="row">
        @for (int i = 0; i < Game.Emojis.Count; i++) {
            string emoji = Game.Emojis[i];
            string description = $"Button-{i}";
            <div class="col-3">
                <button type="button" class="btn btn-outline-dark"
                        @onclick="() => Game.ButtonOnClick(emoji, description)">
                    <h1>@emoji</h1>
                </button>
            </div>
        }
    </div>
</div>

@code{

    protected override void OnInitialized() {
        Game.SetupGame();
    }

}