<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="175"
        x:Class="SwordDamage.MainWindow"
        Title="SwordDamage">

    <Grid ShowGridLines="False" RowDefinitions="*,*,*,*" ColumnDefinitions="*,*">

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center"
                   VerticalAlignment="Center" FontSize="18"
                   FontWeight="Bold" Text="Sword Damage" />

        <CheckBox Name="Flaming" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"
                  FontWeight="Bold" Content="Flaming" />

        <CheckBox Name="Magic" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                  FontWeight="Bold" Content="Magic" />

        <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center" Margin="10 0 10 0" FontWeight="Bold" Content="Roll for damage" />

        <TextBlock Name="Damage" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Text="Damage"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" FontSize="18" FontWeight="Bold" />

    </Grid>
</Window>