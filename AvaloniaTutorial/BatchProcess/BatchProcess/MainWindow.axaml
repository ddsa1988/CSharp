<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="600"
        Width="1024" Height="600"
        x:Class="BatchProcess.MainWindow"
        Title="Batch Process">

    <Grid ShowGridLines="True" Background="{DynamicResource PrimaryBackground}" ColumnDefinitions="200,*">
        <Border Grid.Column="0" Padding="20" Background="{DynamicResource PrimaryBackgroundGradient}">
            <Grid RowDefinitions="*,Auto">
                <StackPanel Grid.Row="0" Spacing="5">
                    <Image Source="{SvgImage /Assets/Images/logo.svg}" Width="180"></Image>
                    <Button HorizontalAlignment="Stretch">
                        <StackPanel Classes="button-group">
                            <Label Classes="icon" Content="&#xe2c2;"></Label>
                            <Label Content="Home"></Label>
                        </StackPanel>
                    </Button>
                    <Button HorizontalAlignment="Stretch">
                        <StackPanel Classes="button-group">
                            <Label Classes="icon" Content="&#xe346;"></Label>
                            <Label Content="Process"></Label>
                        </StackPanel>
                    </Button>
                    <Button HorizontalAlignment="Stretch">
                        <StackPanel Classes="button-group">
                            <Label Classes="icon" Content="&#xe7f2;"></Label>
                            <Label Content="Actions"></Label>
                        </StackPanel>
                    </Button>
                    <Button HorizontalAlignment="Stretch">
                        <StackPanel Classes="button-group">
                            <Label Classes="icon" Content="&#xe3ee;"></Label>
                            <Label Content="Macros"></Label>
                        </StackPanel>
                    </Button>
                    <Button HorizontalAlignment="Stretch">
                        <StackPanel Classes="button-group">
                            <Label Classes="icon" Content="&#xeb7a;"></Label>
                            <Label Content="Report"></Label>
                        </StackPanel>
                    </Button>
                    <Button HorizontalAlignment="Stretch">
                        <StackPanel Classes="button-group">
                            <Label Classes="icon" Content="&#xe03a;"></Label>
                            <Label Content="History"></Label>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <Button Classes="transparent" Grid.Row="1">
                    <Label Classes="icon" Content="&#xe272;"></Label>
                </Button>
            </Grid>
        </Border>
    </Grid>

</Window>